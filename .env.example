# Database (Postgres via Docker — see docker-compose.yml)
DATABASE_URL="postgresql://lastshoot:lastshoot@localhost:5433/lastshoot?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-here"

# Admin credentials (single-user)
# NOTE: bcrypt hashes contain $ — use \$ in double quotes or single quotes
ADMIN_USERNAME="admin"
ADMIN_PASSWORD_HASH="\$2b\$12\$your-bcrypt-hash-here"

# Object storage (S3-compatible / DigitalOcean Spaces)
STORAGE_ENDPOINT="https://nyc3.digitaloceanspaces.com"
STORAGE_REGION="nyc3"
STORAGE_BUCKET="lastshoot"
STORAGE_ACCESS_KEY_ID="your-access-key"
STORAGE_SECRET_ACCESS_KEY="your-secret-key"
STORAGE_PUBLIC_BASE_URL="https://lastshoot.nyc3.cdn.digitaloceanspaces.com"
